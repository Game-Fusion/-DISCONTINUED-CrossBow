function yWave(colour)
  local w,h = term.getSize()
  term.setBackgroundColour(colours[colour])
  for i = 1,h do
  line(i) sleep(0.1)
end
end

function yWave(colour)
  local w,h = term.getSize()
  term.setBackgroundColour(colours[colour])
  for i = 1,h do
  line(i) sleep()
end
end

function fastSleep()
  os.queueEvent("subsleep")
  os.pullEvent()
end
